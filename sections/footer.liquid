<footer class="footer">
  <div class="footer__row">
    {% if section.settings.facebook_url != blank %}
      <a href="{{ section.settings.facebook_url }}" class="footer__social" aria-label="Facebook" target="_blank" rel="noopener">f</a>
    {% endif %}
    {% if section.settings.twitter_url != blank %}
      <a href="{{ section.settings.twitter_url }}" class="footer__social" aria-label="Twitter" target="_blank" rel="noopener">t</a>
    {% endif %}

    {% for link in section.settings.menu.links %}
      <span class="footer__divider">|</span>
      <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
    {% endfor %}
  </div>
</footer>

{% stylesheet %}
  .footer {
    height: 5vh;
    padding: 2rem 0 1.5rem;
  }
  .footer__row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .footer a {
    text-decoration: none;
    color: var(--color-foreground);
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }
  .footer__social {
    font-size: 0.85rem;
  }
  .footer__divider {
    font-size: 0.7rem;
    color: var(--color-foreground);
    opacity: 0.4;
  }
  .footer a:hover {
    opacity: 0.6;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    }
  ]
}
{% endschema %}
