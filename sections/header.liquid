<header>
  <a href="{{ routes.root_url }}" class="header__logo">
    {% if section.settings.logo != blank %}
      {{ section.settings.logo | image_url: width: 1920 | image_tag:
            alt: shop.name,
            widths: '400, 800, 1200, 1920',
            sizes: '80vw',
            class: 'header__logo-img'
      }}
    {% else %}
      <span class="header__logo-text">{{ section.settings.logo-text }}</span>
    {% endif %}
  </a>
</header>

{% stylesheet %}
  header {
    height: 10vh;
    padding: 1.5rem 0;
  }
  header a {
    text-decoration: none;
    color: var(--color-foreground);
  }
  .header__logo-text {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 700;
    letter-spacing: 0.3em;
    text-transform: uppercase;
  }
{% endstylesheet %}

{% style %}
  .header__logo-img {
    display: block;
    height: auto;
    width: {{ section.settings.logo_width }}vw;
  }
{% endstyle %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo-text",
      "label": "Logo Text"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "vw",
      "label": "Logo width (% of viewport)",
      "default": 80
    }
  ]
}
{% endschema %}
